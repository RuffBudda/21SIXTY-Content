# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Master Password (REQUIRED - Change this to a secure password!)
# This password is required to access the application
MASTER_PASSWORD=ChangeMeToSecurePassword123!

# AssemblyAI API Key (REQUIRED for audio transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Database URL (optional - defaults to SQLite)
DATABASE_URL=sqlite+aiosqlite:///backend/content.db

# YouTube Configuration (optional)
YOUTUBE_API_KEY=optional_youtube_api_key

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://contents.2160.media

# Server Configuration
HOST=0.0.0.0
PORT=8001
